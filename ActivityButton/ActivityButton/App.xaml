<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ActivityButton.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="SwordBlue">#169ee1</Color>
            <Color x:Key="ButtonColor">#169ee1</Color>
            <Color x:Key="ButtonTextColor">#ffffff</Color>

            <Style TargetType="Button" x:Key="ActivityControlStyle">
                <Setter Property="FontSize" Value="Default" />
                <Setter Property="BackgroundColor" Value="{StaticResource ButtonColor}" />
                <Setter Property="TextColor" Value="{StaticResource ButtonTextColor}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>